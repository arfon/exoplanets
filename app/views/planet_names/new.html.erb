<%= t(:suggest) %>

<%= form_for @name, :url => names_path do |f| %>
  <%= f.label :name, t(:name) %>:
  <%= f.text_field :name %><br />
  <%= f.label :explanation, 'Explanation' %>:
  <%= f.text_field :explanation %><br />
  <%= f.collection_select(:planet_id, @planets, :id, :host_name, :selected => params[:planet_id]) %>
  <%= f.submit %>
<% end %>